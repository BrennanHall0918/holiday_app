<%- include('../partials/header') %>

<main class="main" id="main">
    <div class="container">
        <h2 class="text-center text-capitalize">Add an actor</h2>
        <form 
        action="http://localhost:3000/api/actor/create" 
        method="post"
        class="form" 
        id="actorForm">
        <div class="row mb-3">
            <div class="col">
                <label for="first_name" class="form-label">
                    First name:
                </label>
                <input 
                type="text"
                id="first_name"
                name="first_name"
                class="form_control">
            </div>
            <div class="row mb-3">
            <div class="col">
                <label for="last_name" class="form-label">
                    Last name:
                </label>
                <input 
                type="text"
                id="last_name"
                name="last_name"
                class="form_control">
            </div>
        </div>
        <button 
            class="btn btn-primary"
            type="submit"
            role="button"
        >Add Actor</button>
    </form>
    </div>
</main>

<%- include('../partials/footer') %>