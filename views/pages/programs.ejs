<%- include('../partials/header') %>

<main class="main py-5">
    <div class="container">
        <h1 class="text-center mb-4"><%= title %></h1>

        <div class="row">
            <% programs.forEach(program => { %>
                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img 
                        src="<%= program.poster_url %>" 
                        class="card-img-top" 
                        alt="<%= program.title %> Poster" 
                        style="height: 350px; object-fit: cover;">

                        <div class="card-body d-flex flex-column">  
                            <h5 class="card-title"><%= titleCase(program.title) %></h5>

                            <p class="card-text mb-1"><strong>Year:</strong> <%= program.yr_released %></p>
                            <p class="card-text mb-1"><strong>Runtime:</strong> <%= program.runtime %> </p>
                            <p class="card-text mb-1"><strong>Critic Score:</strong> <%= program.critic_score %>/10</p>

                            <a href="/programs/id/<%= program.program_id %>" 
                            class="btn btn-primary mt-auto">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="text-center mt-4">
            <a href="/" class="btn btn secondary">Back to Home</a>
        </div>

    </div>
</main>

<%- include('../partials/footer') %>